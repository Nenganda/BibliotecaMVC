@model CreateAutorViewModel

<div class="row orderForm">
    <form asp-controller="Autor" asp-action="Create" method="post" class="form-horizontal" role="form">
        @Html.HiddenFor(x => x.RefererURL)
        <h3 class="col-md-offset-2">Cadastrar Autor</h3>
        <div class="form-group">
            <label asp-for="Autor.Descricao" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Autor.Descricao" class="form-control" placeholder="Digite o nome do Autor" />
                <span asp-validation-for="Autor.Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Voltar" asp-controller="Autor" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>