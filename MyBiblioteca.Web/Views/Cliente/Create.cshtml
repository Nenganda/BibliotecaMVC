@model Cliente

<div class="row orderForm">
    <form asp-controller="Cliente" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Cadastrar Cliente</h3>
        <div class="form-group">
            <label asp-for="Descricao" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="Descricao" class="form-control" placeholder="Digite o Nome do Cliente" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Voltar" asp-controller="Cliente" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Cadastar" />
            </div>
        </div>
    </form>
</div>