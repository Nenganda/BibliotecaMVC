@model EmprestarViewModel
<div class="row orderForm">

    <form asp-controller="Emprestar" asp-action="EmprestarLivro" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Emprestar Livro</h3>
        @Html.HiddenFor(m => Model.Livro.LivroId)
        <div class="form-group">
            <label asp-for="Livro.Mutuaria" class="col-md-2 control-label"></label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Livro.MutuariaId,
                                             new SelectList(Model.Clientes.Select(x => new { Value = x.ClienteId, Text = x.Descricao }), "Value", "Text"),
                                             "Selecionar Cliente",
                                             htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Voltar" asp-controller="Emprestar" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Emprestar" />
            </div>
        </div>
    </form>
</div>