@model IEnumerable<Livro>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descrição</th>
            <th>Autores</th>
            <th>Emprestimo do Livro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Livro livro in Model)
        {
            <tr>
                <td>@livro.LivroId</td>
                <td>@livro.Titulo</td>
                <td>@livro.Autor.Descricao</td>
                <td><a class="btn btn-success" asp-area="" asp-controller="Emprestar" asp-action="EmprestarLivro" asp-route-livroId="@livro.MutuariaId">Emprestar</a></td>
            </tr>
        }
    </tbody>
</table>